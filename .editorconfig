# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

max_line_length = 120

ij_editorconfig_space_after_comma = false

[*.{sln,vcxproj,vcxproj.filters}]
end_of_line = crlf

[Makefile]
indent_style = tab
tab_width = 4

[.gitmodules]
indent_style = tab
tab_width = 4

[*.{yaml,yml,clang-format,clang-tidy,clangd}]
indent_size = 2
